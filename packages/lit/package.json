{
  "name": "@ldesign/engine-lit",
  "version": "0.1.0",
  "description": "Lit adapter for LDesign Engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:lib",
    "build:lib": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "ldesign",
    "engine",
    "lit",
    "web-components",
    "adapter"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "peerDependencies": {
    "lit": "^3.0.0",
    "@ldesign/engine-core": "workspace:*"
  },
  "devDependencies": {
    "lit": "^3.2.1",
    "@ldesign/engine-core": "workspace:*",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  }
}

