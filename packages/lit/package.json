{
  "name": "@ldesign/engine-lit",
  "version": "0.2.0",
  "description": "Lit adapter for LDesign Engine",
  "keywords": [
    "ldesign",
    "engine",
    "lit",
    "web-components",
    "adapter"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./adapter/*": {
      "types": "./es/adapter/*.d.ts",
      "import": "./es/adapter/*.js",
      "require": "./lib/adapter/*.cjs"
    },
    "./decorators/*": {
      "types": "./es/decorators/*.d.ts",
      "import": "./es/decorators/*.js",
      "require": "./lib/decorators/*.cjs"
    },
    "./types": {
      "types": "./es/types/index.d.ts",
      "import": "./es/types/index.js",
      "require": "./lib/types/index.cjs"
    },
    "./types/*": {
      "types": "./es/types/*.d.ts",
      "import": "./es/types/*.js",
      "require": "./lib/types/*.cjs"
    },
    "./__tests__/*": {
      "types": "./es/__tests__/*.d.ts",
      "import": "./es/__tests__/*.js",
      "require": "./lib/__tests__/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,umd,dts",
    "clean": "rimraf dist es lib",
    "dev": "ldesign-builder build -f esm,cjs,umd,dts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "peerDependencies": {
    "lit": "^3.0.0",
    "@ldesign/engine-core": "workspace:*"
  },
  "devDependencies": {
    "lit": "^3.2.1",
    "@ldesign/engine-core": "workspace:*",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  }
}