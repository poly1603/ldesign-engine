{
  "name": "@ldesign/engine-lit",
  "version": "0.3.0",
  "description": "Lit adapter for LDesign Engine - Provides Lit-specific integration for the universal application engine",
  "keywords": [
    "lit",
    "web-components",
    "engine",
    "adapter",
    "plugin",
    "middleware",
    "typescript"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "dev": "ldesign-builder build --watch",
    "clean": "rimraf es lib dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ldesign/engine-core": "workspace:*"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/router": "workspace:*",
    "@ldesign/router-lit": "workspace:*",
    "lit": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "optionalDependencies": {
    "@ldesign/router": "workspace:*",
    "@ldesign/router-lit": "workspace:*"
  },
  "peerDependenciesMeta": {
    "lit": {
      "optional": false
    }
  }
}