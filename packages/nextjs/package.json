{
  "name": "@ldesign/engine-nextjs",
  "version": "0.1.0",
  "description": "Next.js adapter for LDesign Engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "pnpm run clean && tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": ["ldesign", "engine", "nextjs", "adapter", "ssr"],
  "license": "MIT",
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "@ldesign/engine-core": "workspace:*"
  },
  "devDependencies": {
    "next": "^15.1.4",
    "react": "^19.0.0",
    "@ldesign/engine-core": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0",
    "jsdom": "^25.0.0"
  }
}

